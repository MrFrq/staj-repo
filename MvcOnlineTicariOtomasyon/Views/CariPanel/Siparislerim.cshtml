@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<br />
<h2>Sipariş Geçmişim</h2>
<br />
<label> Kullanıcı : @HttpContext.Current.User.Identity.Name</label>

<table class="table table-bordered">
    <tr>
        <th>Ürün Adı </th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Tarih</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Urun.UrunAd</td>
            @*<td>@x.Urun.SatisFiyati</td>*@
            <td>@x.Adet</td>
            <td>@x.Fiyat</td>
            <td>@x.ToplamTutar ₺</td>
            <td>@Convert.ToDateTime(x.SatisTarihi).ToString("dd/mm/yyyy")</td>
        </tr>
    }

</table>